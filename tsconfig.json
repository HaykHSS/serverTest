{
  "compilerOptions": {
    "target": "es2018",        /* Specify ECMAScript target version */
    "module": "commonjs",      /* Specify module system (Node.js uses CommonJS) */
    "strict": true,            /* Enable strict type-checking options */
    "esModuleInterop": true,   /* Enables interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,      /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true /* Ensure that casing is consistent in file names */
  },
  "include": [
    "src/**/*.ts"             /* Specify the files to be included in the compilation */
  ],
  "exclude": [
    "node_modules"            /* Exclude the node_modules directory */
  ]
}
